<div class = "container">
  <h1>Store search results</h1>
  <h2><strong><%= @total_stores%></strong> Total Stores</h2>
  <table>
    <tr>
      <th>Store name</th>
      <th>City</th>
      <th>Distance from <%= @search_zip %> </th>
      <th>Phone number</th>
      <th>Store type</th>
    </tr>
    <% @stores.each do |store|%>
      <tr>
        <td><%= store.long_name %></td>
        <td><%= store.city %></td>
        <td><%= store.distance %></td>
        <td><%= store.phone_number %></td>
        <td><%= store.store_type %></td>
      </tr>
    <% end %>
  </table>
</div>